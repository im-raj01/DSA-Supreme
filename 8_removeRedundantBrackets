#include<bits/stdc++.h>
using namespace std;
#define ll long long
bool findRedundantBrackets(string &s)
{
    // Write your code here.
    if(s.size() == 0){
        return true;
    }
    stack<char>st;
    for(int i =0;i<s.size();i++){
        char ch = s[i];

        if(ch == ')'){
            char topElement = st.top();
            st.pop();
            bool flag = true;

            while(!st.empty() && topElement != '('){
                // operator check 
                if(topElement == '+' || topElement == '-' || topElement == '*' || topElement == '/'){
                    flag = false;
                }
                topElement = st.top();
                st.pop();
            }
            if(flag == true){
                return true;
            }
        }

        else{
            st.push(ch);
        }
    }
    return false;

}
int main()
{
    string s;
    cin>>s;
    cout<<findRedundantBrackets(s)<<endl;
 return 0;
}
