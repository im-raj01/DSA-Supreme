#include<iostream>
using namespace std;

class Stack{
    public:
    // data member 
    int *arr;
    int top;
    int size; // size of array hai ye 
    
    Stack(int size){
        arr = new int[size];
        this->size = size;
        top = -1;
    }

    //functions;
    void push(int data){
        if(size-top>1){
            //size available
            top++;
            arr[top]=data;
        }
        else{
            cout<<"Stack overflow"<<endl;
        }
    }
    void pop(){
        if(top == -1){
            cout<<"stack empty == stack underflow"<<endl;
        }
        else{
            top--;
        }
    }

    int getTop(){
        if(top == -1){
            cout<<"There is no element in stack"<<endl;
        }
        else{
            return arr[top];
        }
        return 0;
    }

    int getSize(){
        //return no of elements in stack;
        return top+1;
    }
    bool isEmpty(){
        if(top == -1){
            return true;
        }
        else{
            return false;
        }
        return 0;
    }
};
int main(){
    Stack s(10);

    s.push(10);
    s.push(20);
    s.push(30);
    s.push(40);

    while (!s.isEmpty())
    {
        /* code */
        cout<<s.getTop()<<" ";
        s.pop();
    }
    

    return 0;

}
